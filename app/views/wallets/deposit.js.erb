<% if @deposit.errors.any? %>
(function(){
    $("#wallet").trigger("deposit:new",{el:'<%= escape_javascript(render :partial => "wallets/form",locals: {deposit:@deposit})%>'})
})()
<% else %>
    $("#wallet").trigger("deposit:new",{el:'<%= escape_javascript(render :partial => "wallets/form",locals: {deposit:@order})%>'})
    $("#wallet").trigger("deposit:order",{el:'<%= escape_javascript(render :partial => "wallets/wallet_order",locals: {order:@deposit})%>'})
<% end %>