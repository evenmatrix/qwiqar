<%= current_login 'login' %>
<div class="cover">
    <section id="section1" class="box hero static">
      <div class="row-fluid">
        <div class="content">
          <div class="sign_board">
              <%= render partial: "layouts/app_call" %>
              <div class="span6 offset1">
                <div class="join_box form_box  letter_pressed">
                  <%= simple_form_for(resource, :as => resource_name,:html =>{:class=>"form-horizontal"} ,:url => user_session_path) do |f| %>
                      <div class="form-body  row-fluid">
                        <div class="">
                          <%= render partial: "layouts/errors" %>
                          <h3 class="bold_label">Sign In</h3>
                          <div class="separator-pattern"></div>
                          <div class="form-inputs ">
                            <%= f.input :email, :wrapper_html => { :class => 'control-group input_padding_extra' },:input_html => {:class=>"span12 "} %>
                            <%= f.input :password, :wrapper_html => { :class => 'control-group input_padding_extra' },:input_html => {:class=>"span12 i"} %>
                            <label class="checkbox">

                              <input type="checkbox"> Remember Me
                            </label>
                          </div>
                        </div>
                        <div class="join ">
                          <%= f.submit "Sign In",:class => "btn primary-main btn-primary" %>

                          <p class="change_link letter_pressed">
                            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
                          </p>
                        </div>
                        <a class="fb-connect centre-button">
                          <%= image_tag "fbconnect.png" %>
                        </a>
                      </div>
                  <% end %>
                </div>  </div>
          </div>
        </div>
        </div>
    </section>

  <!-- Begin Overview -->
</div>
