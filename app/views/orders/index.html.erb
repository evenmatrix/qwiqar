<div class="page">
<div class="row-fluid">
  <%= currently_at_side_nav 'Order History' %>
  <div class="main span8">
    <div id="orders" class="">
      <div id="history">
        <div class="tableContent">
          <header class="letterPressed clearfix">
            <div class="top-btn-container">
              <h5 class="light-header pull-left">
                <i class="icon-time"></i> History
              </h5>
                  <span class="tool-bar">
                    <button class="btn" type="button"><i class="icon-double-angle-left"></i></button>
                    &nbsp;  2/6   &nbsp;
                    <button class="btn" type="button"><i class="icon-double-angle-right"></i></button>
                    <div class="btn-group ">
                      <a class="btn  dropdown-toggle" data-toggle="dropdown" href="#">
                        Filter
                        <span class="caret"></span>
                      </a>
                      <div class="dropdown-menu">
                        <li class="">
                          <a tabindex="-1" href="#">Date</a>
                        </li>
                        <li class="">
                          <a tabindex="-1" href="#">Payment Gateway</a>
                        </li>
                        <li class="">
                          <a tabindex="-1" href="#">Status</a>
                        </li>
                      </div>
                    </div>
                  </span>


              <div class="input-append input-prepend">
                <span class="add-on"><i class="icon-search"></i></span>
                <input class="span8" id="appendedInputButtons" size="16" type="text"><button class="btn btn-primary" type="button">Search</button>

              </div>
            </div>
            <div style="display: none;" class="tab-form-container">
              <div class="divider-horizontal-b"></div>
              <h6 class="light-header pull-left status-el">
                Status &nbsp; <i class="fa fa-toggle-right"></i>
              </h6>
              <form class="option-form form-inline">
                    <span class="date-el" style="display: none;">
                    <label>Start Date</label>
                    <input type="text" class="input-medium" placeholder="">
                    <button class="btn" type="button"><i class="icon-calendar"></i></button>
                    <span>&nbsp;  &nbsp;</span>

                    <label>End Date</label>

                    <input type="text" class="input-medium" placeholder="">
                    <button class="btn" type="button"><i class="icon-calendar"></i></button>
                     </span>
                    <span class="filter-el">
                      <label class="checkbox inline">
                        <input type="checkbox" id="inlineCheckbox1" value="option1"> success
                      </label>
                      <label class="checkbox inline">
                        <input type="checkbox" id="inlineCheckbox2" value="option2"> Failed
                      </label>
                      <label class="checkbox inline">
                        <input type="checkbox" id="inlineCheckbox3" value="option3"> Pending
                      </label>
                    </span>
              </form>
            </div>
          </header>
          <div class="tableContainer">
            <table class="table table-st letterPressed table-hover">
              <thead>
              <tr>
                <th>Order No</th>
                <th>Item</th>
                <th>Amount</th>
                <th>Gross Amount</th>
                <th>Date</th>
                <th>Status</th>
                <th>Payment Gateway</th>
                <th>Details</th>
              </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript_contents do %>
    <%= javascript_include_tag "wallets" %>
<% end %>

